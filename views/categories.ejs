<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head',{
        title : 'Mates'
    }) %> 

<body class="products">
    <%- include('./partials/header') %> 

 
    <section id="product1" class="section-p1">
        <h2><%= name %></h2>
        <!-- nombre de la categoria -->
        <div class="pro-container">
            <!-- ese array products esta dentro de la categoria -->
            <% products.forEach(({id,name,price}) => { %>
                 <div class="pro">
                <div class="img">
                </div>
                <div class="des">
                    <span>Marca del producto</span>
                    <h5><%= name %></h5>
                    <!-- nombre del producto -->
                    <div class="star" >
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star-half"></i>
                    </div>
                    <h4><%= price %></h4>
                    <!-- precio del producto -->
                </div>
                <div class="cart">
                    <a href="/products/detail/<%= id %>"><i class="fa-solid fa-cart-shopping"></i></a>

                </div>
            </div>
            <% }) %>
        
           
        </div>
    </section>
     

    <section id="pagination" class="section-p1">
        <a href="#">1</a>
        <a href="#">2</a>
        <a href="#"><i class="fa-solid fa-arrow-right-long"></i></a>
    </section>
    
   <section id="novedades" class="section-p1 section-m1">
       <div class="novedadtexto">
           <h4>Suscribite para novedades y</h4>
           <p>Obten√© <span>cupones</span> especiales de descuento</p>
       </div>
       <div class="form">
           <input type="text" placeholder="Tu email">
           <button class="normal">Enviame</button>
       </div>
   </section>


   <%- include('./partials/footer') %> 
    <script src="/javascripts/script.js"></script>
</body>

</html>