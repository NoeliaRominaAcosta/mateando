<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head',{
        title : 'Nuevo producto'
    })  %> 


<body class="productAdmin">
    <%- include('./partials/header') %> 

    <main>
        <section>
            <div>
                <h1>Agregar Producto</h1>
                    
            </div>
         
            <form method="POST" action="" enctype="multipart/form-data"  class="formProducts">
                <article>
                    
                <div class="productAdmin__form-box">
                    <label for="name">Nombre del producto</label>
                    <input class="productAdmin__form-input" type="text" id="name" name="name">
                </div>
                <div class="productAdmin__form-box">
                    <label for="brand">Marca del producto</label>
                    <input class="productAdmin__form-input" type="text" id="brand" name="brand">
                </div>
                <div class="productAdmin__form-box">
                    <label for="price">Precio</label>
                    <input class="productAdmin__form-input" type="number" id="price" name="price">
                </div>
                <div class="productAdmin__form-box">
                    <label for="price">Stock</label>
                    <input class="productAdmin__form-input" type="text" id="stock" name="stock">
                </div>
                <div class="productAdmin__form-box">
                        <label for="category">Categorias</label>
                        <select class="productAdmin__form-input" name="category" id="category">
                            <option value="" hidden selected>Selecciona la categor√≠a...</option>
                          <% categories.forEach(category => { %>
                            <option value="<%= category.id %>"><%= category.name %></option>
                          <% }) %>
                        </select>
                </div>
                
                <div class="productAdmin__form-box">
                  <label for="image">Imagen</label>
                  <input class="productAdmin__form-input" type="file" id="image" name="image" accept="image/*">
              </div>
              <div class="productAdmin__form-box">
                <label for="description">descripcion</label>
            <textarea  name="description" id="description" cols="30" rows="10">
            
            </textarea>
            </div>
            </article>
            <div class="buttons">
                <button class="btnAdmin" type="submit">Guardar</button>
              
             <button class="btnAdmin" type="reset">Cancelar</button>
               </div>
               
            </form>
        </section>

    </main>

</body>

</html>