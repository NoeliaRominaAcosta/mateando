<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head',{
        title : 'Mateando'
    }) %> 

<body class="products">
    <%- include('./partials/header', {user:user}) %> 

    <section id="page-header">
        <h2>Con vos siempre</h2>
        <p>Con mercadopago tenés 2x1 en mates de madera</p>
    </section>


    <section id="product1" class="section-p1">
        <h2>Mates</h2>
      <div class="pro-container">
          <% mates.forEach(({name, id, price,images}) => { %>
           
           <div class="pro">
                <div class="image-container">
                    <a href="/products/detail/<%= id %> "><img src="/images/<%= images[0].file %> " alt=""></a>
                </div>
                <div class="des">
                    <span>La rosenda</span>
                    <h5><%= name %></h5>
                    <div class="star" >
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star-half"></i>
                    </div>
                    <h4>$<%= price %></h4>
                </div>
                <div class="cart">
                    <a href="/products/detail/<%= id %>"><i class="fa-solid fa-cart-shopping"></i></a>

                </div>
            </div>
          <% }) %>
          <h2>Termos</h2>
          <% termos.forEach(({name, id, price,images}) => { %>
           
            <div class="pro">
                 <div class="image-container">
                    <a href="/products/detail/<%= id %> "><img src="/images/<%= images[0].file %> " alt=""></a>

                 </div>
                 <div class="des">
                     <span>La rosenda</span>
                     <h5><%= name %></h5>
                     <div class="star" >
                         <i class="fa-solid fa-star"></i>
                         <i class="fa-solid fa-star"></i>
                         <i class="fa-solid fa-star"></i>
                         <i class="fa-solid fa-star"></i>
                         <i class="fa-solid fa-star-half"></i>
                     </div>
                     <h4>$<%= price %></h4>
                 </div>
                 <div class="cart">
                     <a href="/products/detail/<%= id %>"><i class="fa-solid fa-cart-shopping"></i></a>
 
                 </div>
             </div>
           <% }) %>
           <h2>Sets</h2>
           <% kits.forEach(({name, id, price, images}) => { %>
            
            <div class="pro">
                 <div class="image-container">
                    <a href="/products/detail/<%= id %> "><img src="/images/<%= images[0].file %> " alt=""></a>

                 </div>
                 <div class="des">
                     <span>La rosenda</span>
                     <h5><%= name %></h5>
                     <div class="star" >
                         <i class="fa-solid fa-star"></i>
                         <i class="fa-solid fa-star"></i>
                         <i class="fa-solid fa-star"></i>
                         <i class="fa-solid fa-star"></i>
                         <i class="fa-solid fa-star-half"></i>
                     </div>
                     <h4>$<%= price %></h4>
                 </div>
                 <div class="cart">
                     <a href="/products/detail/<%= id %>"><i class="fa-solid fa-cart-shopping"></i></a>
                    
                    </div>
             </div>
           <% }) %>
        </div>
    </section>
     

    <section id="pagination" class="section-p1">
        <a href="#">1</a>
        <a href="#">2</a>
        <a href="#"><i class="fa-solid fa-arrow-right"></i></a>
    </section>
    
   <section id="novedades" class="section-p1 section-m1">
       <div class="novedadtexto">
           <h4>Suscribite para novedades y</h4>
           <p>Obtené <span>cupones</span> especiales de descuento</p>
       </div>
       <div class="form">
           <input type="text" placeholder="Tu email">
           <button class="normal">Enviame</button>
       </div>
   </section>


   <%- include('./partials/footer') %> 
    <script src="/javascripts/script.js"></script>
</body>

</html>