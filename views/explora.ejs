<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head',{
        title : 'Mateando'
    }) %> 

<body>
    <%- include('./partials/header') %> 

    <section id="feature" class="section-p1">
        <div class="fe-box">
            <div class="image-container">
                <img src="/images/luli-gamburd-Aps0wpkbarM-unsplash.jpg" alt="">
            </div>
            
            <h6>envío gratis</h6>
        </div>
        <div class="fe-box">
            <div class="image-container">
                <img src="/images/luli-gamburd-Aps0wpkbarM-unsplash.jpg" alt="">
            </div>
            
            <h6>envío gratis</h6>
        </div>
        <div class="fe-box">
            <div class="image-container">
                <img src="/images/luli-gamburd-Aps0wpkbarM-unsplash.jpg" alt="">
            </div>
            
            <h6>oferta</h6>
        </div>
        <div class="fe-box">
            <div class="image-container">
                <img src="/images/acero-rosa.png" alt=""  width="130px" height="150px">
            </div>
            
            <h6>oferta</h6>
        </div>
        <div class="fe-box">
            <div class="image-container">
                <img src="/images/acerogamusa.jpg" alt="" width="130px" height="150px">
            </div>
            
            <h6>oferta</h6>
        </div>
        <div class="fe-box">
            <div class="image-container">
                <img src="/images/luli-gamburd-Aps0wpkbarM-unsplash.jpg" alt="">
            </div>
            
            <h6>oferta</h6>
        </div>
    </section>
    
    <section id="banner" class="section-m1">
        <h4>Exclusivo Mayo</h4>
        <h2>Tenés <span>50% de descuento</span> comprando Stanley</h2>
        <a href="/products">
            <div class="container">
                <div class="center">
                  <button class="btn">
                    <svg width="180px" height="60px" viewBox="0 0 180 60" class="border">
                      <polyline points="179,1 179,59 1,59 1,1 179,1" class="bg-line" />
                      <polyline points="179,1 179,59 1,59 1,1 179,1" class="hl-line" />
                    </svg>
                    <span>Ver más</span>
                  </button>
                </div>
              </div>
        </a>
    </section>

    <section id="product1" class="section-p1">
        <h3><span>--- Destacados ---</span></h3>
     
        <div class="pro-container">
            
            <% vendidos.forEach(({name, id, price,images}) => { %>
           
                <div class="pro">
                     <div class="image-container">
                         <a href="/products/detail/<%= id %> "><img src="/images/<%= images[0].file %> " alt=""></a>
                     </div>
                     <div class="des">
                         <span>La rosenda</span>
                         <h5><%= name %></h5>
                         <div class="star" >
                             <i class="fa-solid fa-star"></i>
                             <i class="fa-solid fa-star"></i>
                             <i class="fa-solid fa-star"></i>
                             <i class="fa-solid fa-star"></i>
                             <i class="fa-solid fa-star-half"></i>
                         </div>
                         <h4>$<%= price %></h4>
                     </div>
                     <div class="cart">
                         <a href="/products/detail/<%= id %>"><i class="fa-solid fa-cart-shopping"></i></a>
     
                     </div>
                 </div>
               <% }) %>
        </div>
    </section>

    <section id="banner2" class="section-m1">
    
    </section>
    <section id="product1" class="section-p1">
        <h3><span>--- Ofertas ---</span></h3>
        <h2>Calidad premium, mateando siempre con vos</h2>
        <div class="pro-container">
            <% oferta.forEach(({name, id, price,images}) => { %>
           
                <div class="pro">
                     <div class="image-container">
                         <a href="/products/detail/<%= id %> "><img src="/images/<%= images[0].file %> " alt=""></a>
                     </div>
                     <div class="des">
                         <span>La rosenda</span>
                         <h5><%= name %></h5>
                         <div class="star" >
                             <i class="fa-solid fa-star"></i>
                             <i class="fa-solid fa-star"></i>
                             <i class="fa-solid fa-star"></i>
                             <i class="fa-solid fa-star"></i>
                             <i class="fa-solid fa-star-half"></i>
                         </div>
                         <h4>$<%= price %></h4>
                     </div>
                     <div class="cart">
                         <a href="/products/detail/<%= id %>"><i class="fa-solid fa-cart-shopping"></i></a>
     
                     </div>
                 </div>
               <% }) %>
        </div>
    </section>
   
   <section id="sm-banner" class="section-p1">
        <div class="banner-box">
            <h4>Ofertones</h4>
            <h2>Tenés 2x1</h2>
            <span>Los mejores mates de acero</span>
            <a href="/products"><button class="white">Ver más</button></a>
        </div>
       
   </section>

   <%- include('./partials/footer') %> 
    <script src="/javascripts/script.js"></script>
</body>

</html>

